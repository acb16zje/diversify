- content_for :title, @project.name

%section.section#projects
  .container.box
    .columns.is-vcentered
      .column
        %h1.title.is-2
          Manage Teams
      .column
        - if user_signed_in? && (current_user == @project.user || current_user.admin?) && !@project.completed?
          .is-pulled-right
            = link_to new_team_path(project_id: @project.id), class: 'button is-primary' do
              %p New Team
              %span.icon
                %span.iconify{ 'data-icon': 'el:plus' }
    %teams-manage{ 'project-id': @project.id, 'original-data': @data.to_json, 'original-teams': @teams.to_json }

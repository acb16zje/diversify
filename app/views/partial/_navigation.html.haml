.header.sticky-top
  #logo.float-left
    %h5.logo
      = link_to 'diversify', root_path, class: "navbar-brand font-weight-bold"
  %nav.navbar.navbar-expand-lg.navbar-light.float-right

    %button.navbar-toggler.float-right{"aria-controls" => "navbarNavAltMarkup", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavAltMarkup", "data-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon
    #navbarNavAltMarkup.collapse.navbar-collapse
      .navbar-nav
        = link_to 'Home', root_path, class: "nav-item font-weight-bold"
        = link_to 'Features', "#{root_path}#features", class: "nav-item font-weight-bold"
        = link_to 'Pricing', pricing_pages_path, class: "nav-item font-weight-bold"
        = link_to 'About Us', about_pages_path, class: "nav-item font-weight-bold"
        = link_to 'Contact Us', contact_pages_path, class: "nav-item font-weight-bold"
        = link_to 'Register', register_pages_path, class: "nav-item font-weight-bold"

- content_for :title, 'Pricing'

%main#pricing
  %section.section
    %h1.title.is-1.text-center Pricing plans

    .container
      .columns.is-vcentered
        .column
          .card
            .card-content
              .content
                %h5.title.is-5.text-center Casual
                %h2.title.is-2.text-center Free

                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'icomoon-free:infinite' }
                  %span Join unlimited projects
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'fa-solid:check' }
                  %span Automated team building
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'fa-solid:check' }
                  %span Skill set manager
            %footer.card-footer
              = link_to 'Get started for free', newsletter_pages_path(type: 'Free'),
                class: 'button is-primary is-medium w-full rounded-none'

        .column
          .card
            .card-content
              .content
                %h5.title.is-5.text-center Professional
                %h2.title.is-2.text-center £ 10 / month

                %p.card-text.small.flex
                  %span.icon
                    %span.iconify{ 'data-icon': 'dashicons:arrow-left-alt' }
                  %span Everything included in Free
                %hr
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'icomoon-free:infinite' }
                  %span Unlimited private projects
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'fa-solid:check' }
                  %span Automated task allocation
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'fa-solid:check' }
                  %span Peer review system
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'fa-solid:check' }
                  %span Issue board
            %footer.card-footer
              = link_to 'Start 14-day free trial', newsletter_pages_path(type: 'Pro'),
                class: 'button is-primary is-medium w-full rounded-none'

        .column
          .card.border-primary
            .card-content
              .content
                %h5.title.is-5.text-center Ultimate
                %h2.title.is-2.text-center £ 20 / month

                %p.card-text.small.flex
                  %span.icon
                    %span.iconify{ 'data-icon': 'dashicons:arrow-left-alt' }
                  %span Everything included in Pro
                %hr
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'icomoon-free:infinite' }
                  %span Unlimited members per project
                %p.card-text.small.flex
                  %span.icon.has-text-success
                    %span.iconify{ 'data-icon': 'icomoon-free:infinite' }
                  %span Unlimited active tasks
            %footer.card-footer
              = link_to 'Start 14-day free trial', newsletter_pages_path(type: 'Ultimate'),
                class: 'button is-primary is-medium w-full rounded-none'

  %section.hero.is-medium
